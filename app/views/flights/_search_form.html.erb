<%= form_tag(root_path, method: :get) do %>
  <%= label_tag :from_airport_id, "From:" %>
  <%= select_tag :from_airport_id, options_from_collection_for_select(@airports,
                                :id, :code) %>
  
  <%= label_tag :to_airport_id, "Destination:" %>
  <%= select_tag :to_airport_id, options_from_collection_for_select(@airports,
                                :id, :code) %>

  <%= label_tag :num_tickets, "Number of passengers:" %>
  <%= select_tag :num_tickets, options_for_select([[1,1],[2,2],[3,3],[4,4]]) %>
  
  <%= label_tag :date, "Date:" %>
  <%= select_tag :date, options_for_select(@date_options) %>

  <%= submit_tag "Search" %>

<% end %>
